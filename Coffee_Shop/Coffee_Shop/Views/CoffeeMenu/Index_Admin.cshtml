@using EntityLayer.Concrete
@model List<CoffeeMenu>
<style>
	h2 {
		color: white;
	}
</style>
<h2>Hoşgeldiniz @TempData["UserName"]</h2>

<div class="row">
	<div class="col-md-12">
		<div class="row my-3">
			@foreach (CoffeeMenu coffeeMenu in Model)
			{

				<partial name="_AdminCoffeeMenuCard" model="@coffeeMenu" />

			}
		</div>
	</div>
</div>

<a style="background-color: rgb(186, 124, 93);" asp-action="Add" asp-controller="CoffeeMenu" class="btn btn-primary">Add New Coffee</a>
