@{
    ViewData["Title"] = "Home";
}

<div class="welcome-container text-center">
    <h1 class="display-4 mt-5">Welcome to My Coffee Shop</h1>
    <p class="lead mt-3">Discover the finest coffee blends and enjoy your perfect cup!</p>
    <a asp-action="Index" asp-controller="CoffeeMenu" class="btn btn-dark btn-lg mt-4">View Menu</a>
</div>

<style>
    .welcome-container {
        background: rgba(255, 255, 255, 0.8);
        padding: 40px;
        border-radius: 12px;
        max-width: 600px;
        margin: 100px auto;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

        .welcome-container h1 {
            color: #552f0a;
            font-family: 'Roboto', sans-serif;
            font-weight: bold;
        }

        .welcome-container p {
            color: #6c757d;
        }

        .welcome-container .btn {
            background-color: #552f0a;
            border: none;
            padding: 12px 30px;
            font-size: 18px;
            border-radius: 5px;
        }

            .welcome-container .btn:hover {
                background-color: #6c4311;
            }
</style>
