@model EntityLayer.Concrete.Register
<style>
    body {
        background-color: #f8f3e9; 
        font-family: 'Arial', sans-serif; 
    }

    .login {
        width: 50%;
        min-width: 300px;
        max-width: 800px;
        padding: 2rem;
        margin: 2rem auto;
        border-radius: 15px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2); 
        background: linear-gradient(to bottom, #fffdf5, #f2ebe3); 
        position: relative;
    }

    .form-title {
        position: absolute;
        top: -1.5rem;
        left: 50%;
        transform: translateX(-50%);
        background-color: #f8f3e9;
        padding: 0.5rem 1.5rem;
        font-size: 2rem;
        font-weight: bold;
        color: #6b4f39;
        border-radius: 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); 
    }

    .form-row label {
        font-weight: bold;
        color: #6b4f39; 
    }

    .form-control {
        border: 2px solid #d6b38c;
        border-radius: 8px;
        padding: 0.6rem;
    }

        .form-control:focus {
            border-color: #a47449;
            box-shadow: 0 0 5px rgba(164, 116, 73, 0.5); 
        }

    .btn-primary {
        background-color: #a47449;
        border: none;
        padding: 0.8rem 2rem;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 25px;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #6b4f39;
            cursor: pointer;
        }


    .form-link a {
        color: #6b4f39;
        text-decoration: none;
    }

        .form-link a:hover {
            text-decoration: underline;
        }
</style>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <div class="login">
            <div class="form-title">Sign In</div>
            <form method="post">
                <div class="form-row">
                    <label for="exampleInputEmail1 mb-2">Mail Address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="UserMail" placeholder="" required="">
                </div>
                <div class="form-row">
                    <label for="exampleInputPassword1 mb-2">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="UserPassword" placeholder="" required="">
                </div>
                <div class="form-check mb-2">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-primary submit mb-4">Sign In</button>
                <p class="form-link">
                    <a href="/Register/Index">Don't you have an account?</a>
                </p>
            </form>
        </div>
    </div>
</section>
